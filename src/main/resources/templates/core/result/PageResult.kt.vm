 * Created by Monkey on 2017/6/16.
 */
class PageResult constructor(code: Int, msg: String?, page: Page<*>) : DataResult(code, msg, page.records) {
    var total: Long = 0

    init {
        this.total = page.total
    }

    companion object {
        fun buildSuccess(msg: String = "", page: Page<*>) = PageResult(0, msg, page)
    }
}
